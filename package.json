{
  "name": "polished",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-tenant SaaS booking platform for beauty studios",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,vue,js,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "migrate": "bun run packages/database/scripts/migrate.ts",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "cypress": "^15.9.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "bun@1.0.25",
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
