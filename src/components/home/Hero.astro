---
import { getTranslations, getLocalizedValue, type Locale } from '../../i18n';
import siteConfig from '../../data/site-config.json';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
---

<section class="relative min-h-[80vh] flex items-center bg-gradient-to-br from-gray-50 via-white to-gray-100 overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-amber-100/30 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-100/30 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 py-20 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Subtitle -->
      <p class="text-sm uppercase tracking-widest text-gray-500 mb-4">
        {t.hero.title}
      </p>

      <!-- Main Title -->
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-display font-bold text-gray-900 mb-6">
        {siteConfig.site.name}
      </h1>

      <!-- Tagline -->
      <p class="text-xl md:text-2xl text-gray-600 font-light mb-4">
        {getLocalizedValue(siteConfig.site.tagline, locale)}
      </p>

      <!-- Description -->
      <p class="text-lg text-gray-500 max-w-2xl mx-auto mb-10">
        {t.hero.description}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="#calendar"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-gray-900 rounded-full hover:bg-gray-800 transition-all hover:scale-105"
        >
          {t.hero.cta}
        </a>
        <a
          href="#services"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-gray-700 bg-white border border-gray-200 rounded-full hover:bg-gray-50 transition-all"
        >
          {t.services.viewAll}
        </a>
      </div>

      <!-- Service Cards Preview -->
      <div class="mt-16 grid grid-cols-1 md:grid-cols-2 gap-6 max-w-2xl mx-auto">
        <a
          href="/massage-wellness"
          class="group p-6 bg-white rounded-2xl shadow-sm border border-gray-100 hover:shadow-lg transition-all hover:-translate-y-1"
        >
          <div class="w-12 h-12 mb-4 rounded-full bg-amber-100 flex items-center justify-center mx-auto">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-amber-600 transition-colors">
            {t.nav.massageWellness}
          </h3>
          <p class="text-sm text-gray-500">
            {locale === 'de' ? 'Sport, Wellness & Kosmetik' : locale === 'fr' ? 'Sport, Bien-etre & Cosmetique' : 'Sport, Wellness & Cosmetics'}
          </p>
        </a>

        <a
          href="/nail-art"
          class="group p-6 bg-white rounded-2xl shadow-sm border border-gray-100 hover:shadow-lg transition-all hover:-translate-y-1"
        >
          <div class="w-12 h-12 mb-4 rounded-full bg-purple-100 flex items-center justify-center mx-auto">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-purple-600 transition-colors">
            {t.nav.nailArt}
          </h3>
          <p class="text-sm text-gray-500">
            {locale === 'de' ? 'Kreative Designs & Extensions' : locale === 'fr' ? 'Designs Creatifs & Extensions' : 'Creative Designs & Extensions'}
          </p>
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
