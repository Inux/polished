---
import { getTranslations, getLocalizedValue, type Locale } from '../../i18n';
import servicesOwner1 from '../../data/services-owner1.json';
import servicesOwner2 from '../../data/services-owner2.json';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);

const featuredServices1 = servicesOwner1.services.filter(s => s.featured).slice(0, 2);
const featuredServices2 = servicesOwner2.services.filter(s => s.featured).slice(0, 2);
---

<section id="services" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-4">
        {t.services.title}
      </h2>
      <p class="text-lg text-gray-500 max-w-2xl mx-auto">
        {t.services.subtitle}
      </p>
    </div>

    <!-- Owner 1 Services -->
    <div class="mb-16">
      <div class="flex items-center justify-between mb-8">
        <h3 class="text-2xl font-display font-semibold text-gray-900">
          {getLocalizedValue(servicesOwner1.owner.name, locale)}
        </h3>
        <a
          href="/massage-wellness"
          class="text-amber-600 hover:text-amber-700 font-medium text-sm flex items-center gap-1 transition-colors"
        >
          {t.services.viewAll}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {featuredServices1.map((service) => (
          <div class="group p-6 bg-gradient-to-br from-amber-50 to-white rounded-2xl border border-amber-100 hover:shadow-lg transition-all">
            <div class="flex justify-between items-start mb-4">
              <div>
                <span class="inline-block px-2 py-1 text-xs font-medium text-amber-700 bg-amber-100 rounded-full mb-2">
                  {t.services.featured}
                </span>
                <h4 class="text-lg font-semibold text-gray-900">
                  {getLocalizedValue(service.name, locale)}
                </h4>
              </div>
              <span class="text-lg font-bold text-amber-600">
                {service.currency} {service.price}
              </span>
            </div>
            <p class="text-gray-600 text-sm mb-4">
              {getLocalizedValue(service.description, locale)}
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">
                {t.services.duration}: {service.duration} {t.services.minutes}
              </span>
              <a
                href={`https://wa.me/${servicesOwner1.owner.contact.whatsapp.replace(/[^0-9]/g, '')}?text=${encodeURIComponent(`${t.whatsapp.greetingWithService.replace('{service}', getLocalizedValue(service.name, locale))}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1 text-sm font-medium text-amber-600 hover:text-amber-700 transition-colors"
              >
                {t.services.bookNow}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Owner 2 Services -->
    <div>
      <div class="flex items-center justify-between mb-8">
        <h3 class="text-2xl font-display font-semibold text-gray-900">
          {getLocalizedValue(servicesOwner2.owner.name, locale)}
        </h3>
        <a
          href="/nail-art"
          class="text-purple-600 hover:text-purple-700 font-medium text-sm flex items-center gap-1 transition-colors"
        >
          {t.services.viewAll}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {featuredServices2.map((service) => (
          <div class="group p-6 bg-gradient-to-br from-purple-50 to-white rounded-2xl border border-purple-100 hover:shadow-lg transition-all">
            <div class="flex justify-between items-start mb-4">
              <div>
                <span class="inline-block px-2 py-1 text-xs font-medium text-purple-700 bg-purple-100 rounded-full mb-2">
                  {t.services.featured}
                </span>
                <h4 class="text-lg font-semibold text-gray-900">
                  {getLocalizedValue(service.name, locale)}
                </h4>
              </div>
              <span class="text-lg font-bold text-purple-600">
                {service.currency} {service.price}
              </span>
            </div>
            <p class="text-gray-600 text-sm mb-4">
              {getLocalizedValue(service.description, locale)}
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">
                {t.services.duration}: {service.duration} {t.services.minutes}
              </span>
              <a
                href={`https://wa.me/${servicesOwner2.owner.contact.whatsapp.replace(/[^0-9]/g, '')}?text=${encodeURIComponent(`${t.whatsapp.greetingWithService.replace('{service}', getLocalizedValue(service.name, locale))}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1 text-sm font-medium text-purple-600 hover:text-purple-700 transition-colors"
              >
                {t.services.bookNow}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
