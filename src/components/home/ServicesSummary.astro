---
import { getTranslations, type Locale } from '../../i18n';
import { getAllSpecialists } from '../../utils/specialists';
import OwnerServicesCard from './OwnerServicesCard.astro';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);

const specialists = getAllSpecialists();
---

<section id="services" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-4">
        {t.services.title}
      </h2>
      <p class="text-lg text-gray-500 max-w-2xl mx-auto">
        {t.services.subtitle}
      </p>
    </div>

    {specialists.map((specialist) => (
      <OwnerServicesCard specialist={specialist} locale={locale} />
    ))}
  </div>
</section>
