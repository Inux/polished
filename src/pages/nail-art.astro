---
import Owner2Layout from '../layouts/Owner2Layout.astro';
import PortfolioCarousel from '../components/nail-art/PortfolioCarousel.vue';
import WhatsAppButton from '../components/common/WhatsAppButton.vue';
import { getTranslations, getLocalizedValue, defaultLocale, type Locale } from '../i18n';
import servicesOwner2 from '../data/services-owner2.json';

const locale: Locale = defaultLocale;
const t = getTranslations(locale);

const owner = servicesOwner2.owner;
const categories = servicesOwner2.categories;
const services = servicesOwner2.services;
const portfolio = servicesOwner2.portfolio;

const title = getLocalizedValue(owner.name, locale);
const description = getLocalizedValue(owner.bio, locale);
---

<Owner2Layout title={title} description={description} locale={locale}>
  <!-- Hero Section -->
  <section class="hero relative min-h-[60vh] flex items-center">
    <div class="container mx-auto px-4 py-20 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6" style="color: var(--color-text-primary);">
          <span>{t.owner2.heroTitle}</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8" style="color: var(--color-text-secondary);">
          {t.owner2.heroSubtitle}
        </p>
        <p class="text-lg max-w-2xl mx-auto mb-10" style="color: var(--color-text-muted);">
          {description}
        </p>
        <a
          href={`https://wa.me/${owner.contact.whatsapp.replace(/[^0-9]/g, '')}?text=${encodeURIComponent(t.whatsapp.greeting)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary inline-flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          {t.owner2.bookAppointment}
        </a>
      </div>
    </div>
  </section>

  <!-- Portfolio Carousel -->
  <section class="py-16" style="background: var(--color-bg-secondary);">
    <div class="container mx-auto px-4">
      <h2 class="section-title text-3xl font-display font-bold text-center mb-12">
        {t.owner2.portfolio}
      </h2>
      <PortfolioCarousel client:visible portfolio={portfolio} locale={locale} />
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16" style="background: var(--color-bg-primary);">
    <div class="container mx-auto px-4">
      <h2 class="section-title text-3xl font-display font-bold text-center mb-12">
        {t.owner2.categories}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto">
        {categories.map((category) => (
          <div class="service-card p-6 text-center relative">
            {category.comingSoon && (
              <span class="badge-coming-soon absolute top-4 right-4">
                {t.owner2.comingSoon}
              </span>
            )}
            <div class="w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center" style="background: var(--gradient-primary);">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {category.id === 'manicure' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                )}
                {category.id === 'nail-art' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                )}
                {category.id === 'extensions' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                )}
                {category.id === 'eyelash' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                )}
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2" style="color: var(--color-text-primary);">
              {getLocalizedValue(category.name, locale)}
            </h3>
            <p class="text-sm" style="color: var(--color-text-muted);">
              {getLocalizedValue(category.description, locale)}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16" style="background: var(--color-bg-accent);">
    <div class="container mx-auto px-4">
      <h2 class="section-title text-3xl font-display font-bold text-center mb-12">
        {t.services.title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {services.map((service) => (
          <div class="service-card p-6">
            {service.featured && (
              <span class="inline-block px-3 py-1 text-xs font-medium rounded-full mb-3" style="background: var(--color-primary-100); color: var(--color-primary-700);">
                {t.services.featured}
              </span>
            )}
            <h3 class="text-lg font-semibold mb-2" style="color: var(--color-text-primary);">
              {getLocalizedValue(service.name, locale)}
            </h3>
            <p class="text-sm mb-4" style="color: var(--color-text-muted);">
              {getLocalizedValue(service.description, locale)}
            </p>
            <div class="flex items-center justify-between pt-4" style="border-top: 1px solid var(--color-border);">
              <div>
                <span class="text-xl font-bold" style="color: var(--color-primary-600);">
                  {service.currency} {service.price}
                </span>
                <span class="text-sm ml-2" style="color: var(--color-text-muted);">
                  {service.duration} {t.services.minutes}
                </span>
              </div>
              <a
                href={`https://wa.me/${owner.contact.whatsapp.replace(/[^0-9]/g, '')}?text=${encodeURIComponent(t.whatsapp.greetingWithService.replace('{service}', getLocalizedValue(service.name, locale)))}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm font-medium transition-colors"
                style="color: var(--color-primary-600);"
              >
                {t.services.bookNow} &rarr;
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16" style="background: var(--gradient-primary);">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-white mb-6">
        {t.owner2.bookAppointment}
      </h2>
      <p class="text-lg text-white/80 max-w-2xl mx-auto mb-8">
        {description}
      </p>
      <WhatsAppButton
        client:idle
        phone={owner.contact.whatsapp}
        message={t.whatsapp.greeting}
        label={t.whatsapp.bookAppointment}
      />
    </div>
  </section>
</Owner2Layout>
